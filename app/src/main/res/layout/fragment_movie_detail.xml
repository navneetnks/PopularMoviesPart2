<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ss"
    tools:context=".activity.MovieDetailActivity"
    android:background="@android:color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_width"
        android:id="@+id/title"
        android:gravity="center_vertical"
        android:text="lorem ipsum"
        android:textColor="@android:color/white"
        android:background="@color/teak"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/title_text_size"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llImage"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_gap"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_weight="2"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="@dimen/title_text_size"
                android:layout_marginBottom="@dimen/margin_gap"
                />
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rating"
                android:textSize="@dimen/font_size"
                android:layout_marginBottom="@dimen/margin_gap"
                android:textColor="@android:color/black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_fav"
                android:id="@+id/fav_button"
                android:background="@color/teak"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>



        </LinearLayout>

    </LinearLayout>

                <TextView
                    android:id="@+id/synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/font_size"
                    android:layout_below="@id/llImage"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/margin_gap"
                    />
            <!--</LinearLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                android:id="@+id/line"
                android:layout_below="@id/synopsis"
                android:layout_marginTop="@dimen/margin_gap"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trailer_top_bottom_margin"
                android:layout_marginBottom="@dimen/trailer_top_bottom_margin"
                android:text="@string/trailer_header"
                android:layout_below="@id/line"
                android:id="@+id/trailer_head"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/trailer_head"
                android:id="@+id/trailer_list"
                android:divider="@color/gray_line"
                android:dividerHeight="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                ></ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                android:id="@+id/line2"
                android:layout_below="@id/trailer_list"
                android:layout_marginTop="@dimen/trailer_top_bottom_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trailer_top_bottom_margin"
                android:layout_marginBottom="@dimen/trailer_top_bottom_margin"
                android:text="@string/review_header"
                android:layout_below="@id/line2"
                android:id="@+id/review_head"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/review_head"
                android:id="@+id/review_list"
                android:divider="@color/gray_line"
                android:dividerHeight="1dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                ></ListView>

    </RelativeLayout>
</ScrollView>
